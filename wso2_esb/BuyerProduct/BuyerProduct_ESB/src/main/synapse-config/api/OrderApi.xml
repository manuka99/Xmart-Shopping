<?xml version="1.0" encoding="UTF-8"?>
<api context="/order" name="OrderApi" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/">
        <inSequence>
            <send>
                <endpoint key="NewOrder"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
    <resource methods="GET" uri-template="/{oid}">
        <inSequence>
            <send>
                <endpoint key="ViewOrder"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/{oid}">
        <inSequence>
            <send>
                <endpoint key="SaveOrderDetails"/>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
