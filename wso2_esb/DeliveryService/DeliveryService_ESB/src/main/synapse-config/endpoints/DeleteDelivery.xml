<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="DeleteDelivery" xmlns="http://ws.apache.org/ns/synapse">
    <http method="delete" uri-template="http://localhost:5000/api/delivery/{uri.var.delivery_id}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
