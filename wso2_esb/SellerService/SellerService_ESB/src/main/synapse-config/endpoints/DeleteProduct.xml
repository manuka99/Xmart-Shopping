<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="DeleteProduct" xmlns="http://ws.apache.org/ns/synapse">
    <http method="delete" uri-template="http://localhost:5006/api/admin/product/{uri.var.pid}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
